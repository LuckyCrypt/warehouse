@using warehouse.ViewModel
@model UnitsViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <h1>Еденицы измерения</h1>
    <div class="d-flex gap-2 mb-3">
        <button class="btn btn-success" id="saveUnitBtn">Сохранить</button>
        <button class="btn btn-danger" id="deleteUnitBtn">Удалить</button>
        <button class="btn btn-primary" id="setArchiveUnitBtn">@(Model.GetSomeUnits.IsArchived ? "В работу" : "В архив")</button>
    </div>
    <input type="text" class="form-control" id="UnitsName" name="UnitsName" value="@Model.GetSomeUnits.Name" />
    <!-- Сообщение об ошибке -->
    <div id="clientsAddError" class="alert alert-danger" role="alert" style="display:none;">
        <span id="clientsAddErrorMessage"></span>
    </div>
</body>

@section Scripts
{
    <script>
        $(document).ready(function () {
            //Сохранить
            $("#saveUnitBtn").click(function () {
                var UnitsName = $("#UnitsName").val();

                $.ajax({
                url: '@Url.Action("saveUnit", "Units")',
                    type: 'POST',
                    data: { id:@Model.GetSomeUnits.Id ,name: UnitsName },
                    success: function (data) {
                        window.location.href = '@Url.Action("", "Units")'
                    },
                    error: function (error) {
                       //alert("Ошибка при добавлении ресурса: " + error.responseText);
                       $("#clientsAddErrorMessage").text(error.responseText);
                       $("#clientsAddError").show();
                       setTimeout(function () {$("#clientsAddError").hide();}, 5000);
                    }
                });
            });
            //Удалить
            $("#deleteUnitBtn").click(function () {
                $.ajax({
                url: '@Url.Action("deleteUnit", "Units")', 
                    type: 'POST',
                    data: { id: @Model.GetSomeUnits.Id },
                    success: function (data) {
                        window.location.href = '@Url.Action("", "Units")'
                    },
                    error: function (error) {
                       //alert("Ошибка при добавлении ресурса: " + error.responseText);
                       $("#clientsAddErrorMessage").text(error.responseText);
                       $("#clientsAddError").show();
                       setTimeout(function () {$("#clientsAddError").hide();}, 5000);
                    }
                });
            });
            //смена isAchive
            $("#setArchiveUnitBtn").click(function () {
                var archiv = @Model.GetSomeUnits.IsArchived.ToString().ToLower();
                $.ajax({
                url: '@Url.Action("setArchiveUnit", "Units")',
                    type: 'POST',
                    data: { id: @Model.GetSomeUnits.Id, archivState: archiv},
                    success: function (data) {
                        window.location.href = '@Url.Action("", "Units")'
                    },
                    error: function (error) {
                       //alert("Ошибка при добавлении ресурса: " + error.responseText);
                       $("#clientsAddErrorMessage").text(error.responseText);
                       $("#clientsAddError").show();
                       setTimeout(function () {$("#clientsAddError").hide();}, 5000);
                    }
                });
            });
            $("#cancelUnitsBtn").click(function () {
                $('#addUnitsModal').modal('hide');
            });
            $("#cancelUnitsBtn2").click(function () {
                $('#addUnitsModal').modal('hide');
            });
        });
    </script>
}