@using warehouse.ViewModel
@model ResourcesViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <h1>Ресуры</h1>
    <div class="d-flex gap-2 mb-3">
        <button class="btn btn-success" id="addResourcesBtn">Добавить</button>
        <a href="@Url.Action("Archive", "Resources")" class="btn btn-warning">К архиву</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Наименование</font></font></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resource in Model.GetResources)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("ResourcesEdit", "Resources", new { id = @resource.Id, name = @resource.Name })" class="table-row-button edit-unit-btn" data-id="@resource.Id" data-name="@resource.Name">
                            @resource.Name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

<div class="modal fade" id="addResourcesModal" tabindex="-1" role="dialog" aria-labelledby="addResourcesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addResourcesModalLabel">Добавить ресурс</h5>
                <button type="button" class="close" id="cancelResourcesBtn" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addResourcesForm">
                    <div class="form-group">
                        <label for="ResourcesName">Наименование</label>
                        <input type="text" class="form-control" id="ResourcesName" name="ResourcesName" placeholder="Введите наименование">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelResourcesBtn2">Отмена</button>
                <button type="button" class="btn btn-primary" id="saveResourcesBtn">Сохранить</button>
            </div>
        </div>
        <!-- Сообщение об ошибке -->
        <div id="clientsAddError" class="alert alert-danger" role="alert" style="display:none;">
            <span id="clientsAddErrorMessage"></span>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            // Добавить
            $("#addResourcesBtn").click(function () {
                $("#addResourcesModal").modal("show");
            });
            //Сохранить
            $("#saveResourcesBtn").click(function () {
                var ResourcesName = $("#ResourcesName").val();

                $.ajax({
                url: '@Url.Action("AddResources", "Resources")',
                    type: 'POST',
                    data: { name: ResourcesName },
                    success: function (data) {
                        location.reload(); 
                        $("#addResourcesModal").modal("hide");

                    },
                    error: function (error) 
                    {
                       $("#clientsAddErrorMessage").text(error.responseText);
                       $("#clientsAddError").show();
                       setTimeout(function () {$("#clientsAddError").hide();}, 5000);
                }
            });
            });
            $("#cancelResourcesBtn").click(function () {
                $('#addResourcesModal').modal('hide');
            });
            $("#cancelResourcesBtn2").click(function () {
                $('#addResourcesModal').modal('hide');
            });
        });
    </script>
}