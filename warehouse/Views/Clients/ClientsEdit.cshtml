@using warehouse.ViewModel
@model ClientsViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <h1>Еденицы измерения</h1>
    <div class="d-flex gap-2 mb-3">
        <button class="btn btn-success" id="saveClientBtn">Сохранить</button>
        <button class="btn btn-danger" id="deleteClientBtn">Удалить</button>
        <button class="btn btn-primary" id="setArchiveClientBtn">@(Model.GetSomeClients.IsArchived ? "В работу" : "В архив")</button>
    </div>
    <input type="text" class="form-control" id="ClientsName" name="ClientsName" value="@Model.GetSomeClients.Name" />
    <input type="text" class="form-control" id="ClientsAddress" name="ClientsAddress" value="@Model.GetSomeClients.Address" />
</body>

@section Scripts
{
    <script>
        $(document).ready(function () {
            //Сохранить
            $("#saveClientBtn").click(function () {
                var ClientsName = $("#ClientsName").val();
                var ClientsAddress = $("#ClientsAddress").val();
                $.ajax({
                url: '@Url.Action("saveClient", "Clients")',
                    type: 'POST',
                    data: { id:@Model.GetSomeClients.Id ,name: ClientsName,address:ClientsAddress },
                    success: function (data) {
                        window.location.href = '@Url.Action("", "Clients")'
                    },
                    error: function (error) {
                        alert("Ошибка при добавлении ресурса: " + error.responseText);
                    }
                });
            });
            //Удалить
            $("#deleteClientBtn").click(function () {
                $.ajax({
                url: '@Url.Action("deleteClient", "Clients")', 
                    type: 'POST',
                    data: { id: @Model.GetSomeClients.Id },
                    success: function (data) {
                        window.location.href = '@Url.Action("", "Clients")'
                    },
                    error: function (error) {
                        alert("Ошибка при добавлении ресурса: " + error.responseText);
                    }
                });
            });
            //смена isAchive
            $("#setArchiveClientBtn").click(function () {
                var archiv = @Model.GetSomeClients.IsArchived.ToString().ToLower();
                $.ajax({
                url: '@Url.Action("setArchiveClient", "Clients")',
                    type: 'POST',
                    data: { id: @Model.GetSomeClients.Id, archivState: archiv},
                    success: function (data) {
                        window.location.href = '@Url.Action("", "Clients")'
                    },
                    error: function (error) {
                        alert("Ошибка при добавлении ресурса: " + error.responseText);
                    }
                });
            });
            $("#cancelClientsBtn").click(function () {
                $('#addClientsModal').modal('hide');
            });
            $("#cancelClientsBtn2").click(function () {
                $('#addClientsModal').modal('hide');
            });
        });
    </script>
}