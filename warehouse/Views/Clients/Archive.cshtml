@using warehouse.ViewModel
@model ClientsViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
    <h1>Еденицы измерения</h1>
    <div class="d-flex gap-2 mb-3">
        <a href="@Url.Action("", "Clients")" class="btn btn-primary">К рабочим</a>

    </div>
    <table class="table table-bordered">
        <thead>
            <tr class="bg-secondary text-light">
                <th>Наименование</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resource in Model.GetClients)
            {
                <tr>
                    <td>
                       <!--Поменять стиль чтобы не было синим-->
                        <a href="@Url.Action("ClientsEdit", "Clients", new { id = @resource.Id, name = @resource.Name })" class="table-row-button edit-Client-btn" data-id="@resource.Id" data-name="@resource.Name">
                            @resource.Name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>