@using warehouse.ViewModel
@model BalanceViewModel
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="favicon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        table {
            width: 100%;
            table-layout: fixed;
        }
    </style>
</head>
<body>
    <h1>Баланс</h1>
    <div class="d-flex gap-2 mb-3">
        <button class="btn btn-success">Ресурс</button>
        <a class="btn btn-warning">Еденицы измерения</a>
        <button class="btn btn-success">Применить</button>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Наименование</font></font></th>
                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Адрес</font></font></th>
                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Количество</font></font></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var balance in Model.GetBalance)
            {
                <tr>
                    <td>
                        @balance.Resource.Name
                    </td>
                    <td>
                        @balance.Unit.Name
                    </td>
                    <td>
                        @balance.Quantity
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

