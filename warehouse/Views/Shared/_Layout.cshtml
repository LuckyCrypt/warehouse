<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: 3px 0 10px rgba(0,0,0,0.1);
            position: fixed;
            width: 250px;
            z-index: 100;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Боковая панель -->
        <div class="col-md-3 col-lg-2 bg-light sidebar p-0">
            <div class="p-3 sidebar-sticky">
                <h4 class="mt-3 mb-4">Управление складом</h4>
                <ul class="nav flex-column">
                    <h1 class="nav-item">
                        Склад
                    </h1>
                    <li class="nav-item">
                        <a href="@Url.Action("", "balances")" class="nav-link">
                            Баланс
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("", "receipts")" class="nav-link">
                            Поступления
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("", "shipments")" class="nav-link">
                            Отгрузки
                        </a>
                    </li>
                    <h1 class="nav-item">
                        Справочники
                    </h1>
                    <li>
                        <a href="@Url.Action("", "clients")" class="nav-link">
                            Клиенты
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Units")" class="nav-link">
                            Единицы измерения
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Resources")" class="nav-link">
                            Ресурсы
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

